<%= form_with model: @obra, local: true do |form|  %>

<% if @obra.errors.any? %>
  <div id="error_explanation">
    <h2>
     <%= pluralize(@obra.errors.count, "error") %> por los que no se puede guardar 
     esta obra:
    </h2> 
   <u1>
   <% @obra.errors.full_messages.each do |msg|  %>
      <li><%= msg  %></li>
   <% end %>
   </u1>
   </div>
 <% end %>


<p>
  <%= form.label :titulo  %><br>
  <%= form.text_field :titulo  %>
</p>
<p>
  <%= form.label :autor  %><br>
  <%= form.text_field :autor %>
</p>

<p>
   <%= form.submit  %>
</p> 

<%  end %>

<%= link_to 'Volver', obras_path %>
